<p style="color: green"><%= notice %></p>

<h1>Chatrooms</h1>

<div id="chatrooms">
  <% @chatrooms.each do |chatroom| %>
    <%= render chatroom %>
    <p>
      <%= link_to "Show this chatroom", chatroom %>
    </p>
    <p>
      <%= link_to "Join", chatroom_chatroom_users_path(chatroom), data: {turbo_method: :post} %>
    </p>
    <p>
      <%= link_to "Leave", chatroom_chatroom_users_path(chatroom), data: {turbo_method: :delete} %>
    </p>
  <% end %>
</div>

<%= link_to "New chatroom", new_chatroom_path %>
